{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": [
      "node",
      "ejs"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "bcrypt": ["./src/types/bcrypt.d.ts"],
      "ejs": ["./node_modules/@types/ejs"],
      "*": ["node_modules/*", "src/config/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/config/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
