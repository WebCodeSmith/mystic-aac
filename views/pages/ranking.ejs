<%- include('../partials/head', { title: 'Top Players', extraCSS: '/ranking.css' }) %>

<div class="ranking-container">
    <h1>Top Players</h1>
    
    <table class="ranking-table">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Level</th>
                <th>Vocação</th>
                <th>Experiência</th>
            </tr>
        </thead>
        <tbody>
            <% topPlayers.forEach((player, index) => { %>
                <tr class="<%= index < 3 ? `top-${index + 1}` : '' %>">
                    <td class="rank"><%= index + 1 %>º</td>
                    <td class="player-name"><%= player.name %></td>
                    <td class="player-level"><%= player.level %></td>
                    <td class="player-vocation"><%= player.vocation %></td>
                    <td class="player-exp"><%= player.experience.toLocaleString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>