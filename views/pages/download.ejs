<%- include('../partials/head', { title: 'Download', extraCSS: '/download.css' }) %>

<div class="home-container">
    <div class="download-section animate__animated animate__fadeIn">
        <div class="download-title">
            <h2>
                <i class="fas fa-download"></i>
                Download do Cliente
            </h2>
        </div>

        <div class="download-grid">
            <div class="download-card">
                <div class="download-icon">
                    <i class="fas fa-desktop"></i>
                </div>
                <h3>Cliente Windows</h3>
                <p class="download-description">
                    Cliente otimizado para Windows com suporte total a todas as funcionalidades do servidor.
                </p>
                <div class="download-info">
                    <span><i class="fas fa-file-archive"></i> 150 MB</span>
                    <span><i class="fas fa-windows"></i> Windows 7+</span>
                </div>
                <a href="/downloads/windows-client.zip" class="btn-download">
                    <i class="fas fa-download"></i>
                    Download Windows
                </a>
            </div>

            <div class="download-card">
                <div class="download-icon">
                    <i class="fab fa-linux"></i>
                </div>
                <h3>Cliente Linux</h3>
                <p class="download-description">
                    Versão do cliente compatível com sistemas Linux, testado em Ubuntu e derivados.
                </p>
                <div class="download-info">
                    <span><i class="fas fa-file-archive"></i> 145 MB</span>
                    <span><i class="fab fa-linux"></i> Linux</span>
                </div>
                <a href="/downloads/linux-client.tar.gz" class="btn-download">
                    <i class="fas fa-download"></i>
                    Download Linux
                </a>
            </div>
        </div>
    </div>
</div>

