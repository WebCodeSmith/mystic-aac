<%- include('../partials/head', { title }) %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Criar Nova Notícia</h1>
            
            <% if (error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
            <% } %>

            <% if (success) { %>
                <div class="alert alert-success">
                    <%= success %>
                </div>
            <% } %>

            <div class="card">
                <div class="card-body">
                    <form 
                        id="newsForm" 
                        action="/news/create" 
                        method="POST"
                    >
                        <div class="form-group">
                            <label for="title">Título</label>
                            <input 
                                type="text" 
                                class="form-control" 
                                id="title" 
                                name="title" 
                                required 
                                minlength="3" 
                                maxlength="100"
                                placeholder="Digite um título com pelo menos 3 caracteres"
                            >
                        </div>

                        <div class="form-group">
                            <label for="summary">Resumo</label>
                            <textarea 
                                class="form-control" 
                                id="summary" 
                                name="summary" 
                                rows="3" 
                                required 
                                minlength="10" 
                                maxlength="255"
                                placeholder="Escreva um resumo com pelo menos 10 caracteres"
                            ></textarea>
                            <small class="form-text text-muted">Mínimo de 10 caracteres</small>
                        </div>

                        <div class="form-group">
                            <label for="content">Conteúdo</label>
                            <textarea 
                                class="form-control" 
                                id="content" 
                                name="content" 
                                rows="10" 
                                required 
                                minlength="10"
                                placeholder="Escreva o conteúdo completo da notícia"
                            ></textarea>
                            <small class="form-text text-muted">Mínimo de 10 caracteres</small>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Criar Notícia
                        </button>
                        <a href="/dashboard" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const titleInput = document.getElementById('title');
    const summaryInput = document.getElementById('summary');
    const contentInput = document.getElementById('content');

    function updateCharCount(input) {
        input.addEventListener('input', function() {
            const countElement = input.nextElementSibling || document.createElement('small');
            countElement.classList.add('form-text', 'text-muted');
            countElement.textContent = `${this.value.length} caracteres`;
            
            if (!countElement.parentNode) {
                input.parentNode.appendChild(countElement);
            }
        });
    }

    updateCharCount(titleInput);
    updateCharCount(summaryInput);
    updateCharCount(contentInput);
});
</script>

